<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assignment2">

    <!-- Define the custom permission with dangerous protection level -->
    <permission
        android:name="com.example.assignment2.MSE412"
        android:protectionLevel="dangerous"
        android:label="MSE412 Permission" />
    <!-- Removed the android:description attribute that was causing me errors earlier -->

    <!-- Declare that this app uses the permission -->
    <uses-permission android:name="com.example.assignment2.MSE412" />

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.Assignment2"
        android:supportsRtl="true">

        <!-- MainActivity (launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- SecondActivity (Assignment 2) - Protected with custom permission -->
        <activity
            android:name=".SecondActivity"
            android:exported="true"
            android:permission="com.example.assignment2.MSE412">
            <intent-filter>
                <action android:name="com.example.assignment2.SHOW_CHALLENGES"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- ThirdActivity (Assignment 4) -->
        <activity
            android:name=".ThirdActivity"
            android:exported="true" />

    </application>

</manifest>
